# ========================================
# Mobile App Environment Variables - Свой Круг
# ========================================
# Copy this file to .env and fill in actual values
# NEVER commit .env to version control

# ========================================
# API Configuration
# ========================================
# Development: Use your local IP (not localhost) for physical devices
# Example: API_BASE_URL=http://192.168.1.100:8000
API_BASE_URL=http://localhost:8000
API_TIMEOUT=10000  # milliseconds

# ========================================
# App Configuration
# ========================================
APP_ENV=development  # development, staging, production
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# ========================================
# Firebase (Push Notifications)
# ========================================
# Android
FIREBASE_ANDROID_API_KEY=your-firebase-api-key
FIREBASE_ANDROID_PROJECT_ID=your-firebase-project-id
FIREBASE_ANDROID_APP_ID=your-firebase-app-id
FIREBASE_ANDROID_SENDER_ID=your-sender-id

# iOS
FIREBASE_IOS_API_KEY=your-firebase-api-key
FIREBASE_IOS_PROJECT_ID=your-firebase-project-id
FIREBASE_IOS_APP_ID=your-firebase-app-id
FIREBASE_IOS_CLIENT_ID=your-client-id

# ========================================
# Sentry (Error Tracking)
# ========================================
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development
SENTRY_ENABLED=false  # Set to true in production

# ========================================
# Feature Flags
# ========================================
FEATURE_ONBOARDING_VIDEO=true
FEATURE_BIOMETRIC_LOGIN=true
FEATURE_QR_SCANNER=true
FEATURE_EVENTS=true
FEATURE_REFERRAL=false  # v1.5
FEATURE_GAMIFICATION=false  # v2.0

# ========================================
# Analytics
# ========================================
# Yandex Metrica (optional)
YANDEX_METRICA_API_KEY=your-yandex-metrica-key
YANDEX_METRICA_ENABLED=false

# Google Analytics (optional)
GOOGLE_ANALYTICS_TRACKING_ID=UA-XXXXXXXXX-X
GOOGLE_ANALYTICS_ENABLED=false

# ========================================
# Debug Settings
# ========================================
DEBUG_MODE=true  # Show debug info, disable in production
SHOW_NETWORK_LOGS=true
ENABLE_REACTOTRON=true  # React Native debugging tool

# ========================================
# App Store / Play Store
# ========================================
IOS_APP_STORE_ID=your-app-store-id
ANDROID_PACKAGE_NAME=ru.svoykrug.app

# ========================================
# Deep Linking
# ========================================
DEEP_LINK_SCHEME=svoykrug
DEEP_LINK_HOST=svoykrug.ru
UNIVERSAL_LINK_HOST=https://svoykrug.ru

# ========================================
# Map Settings (for event locations)
# ========================================
# Yandex Maps API key (Russia)
YANDEX_MAPS_API_KEY=your-yandex-maps-key

# ========================================
# Cache Settings
# ========================================
CACHE_USER_PROFILE=true
CACHE_BONUS_BALANCE=true
CACHE_EXPIRY_MINUTES=10

# ========================================
# QR Code Settings
# ========================================
QR_CODE_REFRESH_INTERVAL=60  # seconds
QR_CODE_SIZE=300  # pixels

# ========================================
# Performance
# ========================================
IMAGE_CACHE_SIZE_MB=50
MAX_CONCURRENT_REQUESTS=5
