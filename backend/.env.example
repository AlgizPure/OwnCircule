# Environment
ENVIRONMENT=development
DEBUG=True

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres_dev_password@localhost:5432/owncircle_dev
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# ClickHouse (Analytics)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=clickhouse
CLICKHOUSE_PASSWORD=clickhouse_dev_password
CLICKHOUSE_DATABASE=analytics

# JWT Authentication (RS256)
JWT_SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# SMS Gateway (SMS.ru)
SMS_RU_API_KEY=your-sms-ru-api-key
SMS_OTP_EXPIRE_MINUTES=5

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:19000,http://localhost:19006

# Security
AES_ENCRYPTION_KEY=your-aes-256-key-change-in-production
PASSWORD_HASH_ROUNDS=12

# Yandex Cloud (Production)
YANDEX_CLOUD_ACCESS_KEY=
YANDEX_CLOUD_SECRET_KEY=
YANDEX_CLOUD_BUCKET=owncircle-media

# Sentry (Error Tracking)
SENTRY_DSN=

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
